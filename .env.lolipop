# EC-CUBE Production Environment Variables for Lolipop Shared Hosting
# ロリポップレンタルサーバー用本番環境設定

###> symfony/framework-bundle ###
APP_ENV=prod
APP_DEBUG=0
# 本番環境では必ずランダムな文字列に変更してください
APP_SECRET=CHANGE_THIS_TO_RANDOM_STRING_IN_PRODUCTION
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
# ロリポップのデータベース設定に合わせて変更してください
# MySQL の場合
DATABASE_URL="mysql://db_username:db_password@db_hostname:3306/db_name?serverVersion=8.0&charset=utf8mb4"

# データベースサーバーのバージョン
DATABASE_SERVER_VERSION=8.0

# データベースの文字セット
DATABASE_CHARSET=utf8mb4
###< doctrine/doctrine-bundle ###

###> symfony/mailer ###
# メール送信設定（ロリポップのSMTP設定に合わせて変更してください）
MAILER_DSN=smtp://smtp_username:smtp_password@smtp.lolipop.jp:465?encryption=ssl
###< symfony/mailer ###

###> EC-CUBE ###
# 管理画面のURLパス（デフォルト: admin）
ECCUBE_ADMIN_ROUTE=admin

# ロケール設定
ECCUBE_LOCALE=ja

# タイムゾーン設定
ECCUBE_TIMEZONE=Asia/Tokyo

# SSL強制（本番環境では true を推奨）
ECCUBE_FORCE_SSL=true

# 認証マジック文字列（必ずランダムな文字列に変更してください）
ECCUBE_AUTH_MAGIC=CHANGE_THIS_TO_RANDOM_STRING_IN_PRODUCTION

# Cookie設定
ECCUBE_COOKIE_NAME=eccube
ECCUBE_COOKIE_PATH=/
ECCUBE_COOKIE_LIFETIME=0

# セッション設定
ECCUBE_GC_MAXLIFETIME=1440

# 管理者初期設定（初回セットアップ後は削除推奨）
# ECCUBE_ADMIN_USER=admin
# ECCUBE_ADMIN_PASS=password

# 2段階認証（推奨: true）
ECCUBE_2FA_ENABLED=true
ECCUBE_2FA_COOKIE_NAME=eccube_2fa
ECCUBE_2FA_EXPIRE=14

# ファイルアップロード制限
ECCUBE_RESTRICT_FILE_UPLOAD=0

# PHPInfo表示（本番環境では false 推奨）
ECCUBE_PHPINFO_ENABLED=false
###< EC-CUBE ###
